<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/myview1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/rounded_shape"
    android:elevation="4dp">

    <TextView
        android:id="@+id/txt_titolo_farmaco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="titolo nota"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/view" />

    <ImageView
        android:id="@+id/img_pillola_nota"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/txt_titolo_farmaco"
        android:layout_alignTop="@+id/txt_dose"
        app:srcCompat="@drawable/pill_colored" />

    <TextView
        android:id="@+id/txt_dose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView15"
        android:layout_alignLeft="@+id/imageView15"
        android:layout_centerVertical="true"
        android:text="xdose" />

    <TextView
        android:id="@+id/txt_ora_dose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_pillola_nota"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="117dp"
        android:layout_marginLeft="117dp"
        android:text="ore:00" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@+id/img_pillola_nota"
        android:layout_alignParentStart="true"
        android:layout_marginStart="81dp"
        app:srcCompat="@drawable/ic_clock" />

    <ImageView
        android:id="@+id/img_check_assunzione"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>

