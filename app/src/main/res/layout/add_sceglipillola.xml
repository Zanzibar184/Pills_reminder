<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--probabilmente il layout_height di myview1 sarà da cambiare con wrap content ma per il momento va bene così-->

    <RelativeLayout
        android:id="@+id/myviewchoosefarmaco"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_choose_pill"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/marginBottom_view"
        android:layout_marginLeft="@dimen/marginLeft_view"
        android:layout_marginRight="@dimen/marginRight_view"
        android:layout_marginTop="@dimen/marginTop_view"
        android:background="@drawable/rounded_shape"
        android:elevation="12dp">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="Scegli il tipo di farmaco"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/view" />

        <ImageView
            android:id="@+id/img_pill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/pill_colored" />

        <TextView
            android:id="@+id/txt_tipo_farmaco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_pill"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Pillola" />

        <ImageView
            android:id="@+id/image_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/arrow_right" />

        <ImageView
            android:id="@+id/image_arrow_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/image_arrow_right"
            app:srcCompat="@drawable/arrow_left" />


    </RelativeLayout>

</RelativeLayout>