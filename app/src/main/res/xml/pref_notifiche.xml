    <PreferenceCategory android:title="Scorte">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="notifiche_scorta_abilitate"
            android:title="Notifiche per scorta farmaci" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/pillole_per_scorta"
            android:entryValues="@array/pillole_per_scorta"
            android:key="pillole_scorta"
            android:title="Avvisa quando mancano" />

    </PreferenceCategory>

    <PreferenceCategory android:title="SMS AVVISO">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="notifiche_SMSAVVISO_abilitate"
            android:title="Notifiche per SMS AVVISO" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/minuti_per_smsavviso"
            android:entryValues="@array/minuti_per_smsavviso"
            android:key="minuti_smsmavviso"
            android:title="Manda SMS dopo" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Promemoria farmaci">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="notifiche_assunzione_farmaci"
            android:title="Notifiche assunzione farmaco" />

    </PreferenceCategory>


</PreferenceScreen>