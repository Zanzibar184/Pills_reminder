    <PreferenceCategory android:title="Abilita Notifiche per">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="notifiche_scorta_abilitate"
            android:title="Scorta farmaci" />

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="notifiche_SMSAVVISO_abilitate"
            android:title="SMS AVVISO" />

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="notifiche_assunzione_farmaci"
            android:title="Assunzione farmaco" />

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="notifiche_note"
            android:title="Note" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Scorte"
        android:textSize="10px">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/pillole_per_scorta"
            android:entryValues="@array/pillole_per_scorta"
            android:key="pillole_di_scorta"
            android:title="Avvisa quando mancano" />

    </PreferenceCategory>

    <PreferenceCategory android:title="SMS AVVISO">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/minuti_per_smsavviso"
            android:entryValues="@array/minuti_per_smsavviso"
            android:key="minuti_smsmavviso"
            android:title="Manda SMS dopo" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Supporto">

        <Preference
            android:key="pref_key_feedback"
            android:title="Lascia un feedback"/>

        <Preference
            android:key="pref_key_infoapp"
            android:title="Informazioni App"/>

    </PreferenceCategory>

</PreferenceScreen>